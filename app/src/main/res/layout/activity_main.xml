<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:textSize="30dp"
        android:text="Image Recognition"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:layout_width="370sp"
        android:layout_height="300sp"
        android:layout_below="@id/title"
        android:id="@+id/imageBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/classifiedAs"
        android:text="Classified as:"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/imageBox"
        android:layout_marginTop="3dp"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/object"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/classifiedAs"
        android:layout_marginTop="-1dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/percentages"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/object"
        android:layout_marginTop="2dp"
        android:text="Confidences"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Percentages"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_below="@+id/percentages"
        android:layout_marginTop="-15dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Percentages"
        android:layout_marginTop="128dp"
        android:text="Take a Picture" />

</RelativeLayout>